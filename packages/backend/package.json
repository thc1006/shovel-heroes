{
  "name": "shovel-backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:db:setup": "node scripts/setup-test-db.js",
    "test:db:reset": "node scripts/setup-test-db.js",
    "test:db:setup:bash": "bash scripts/setup-test-db.sh",
    "pretest": "node scripts/setup-test-db.js",
    "migrate:up": "node-pg-migrate up",
    "migrate:down": "node-pg-migrate down",
    "migrate:create": "node-pg-migrate create",
    "migrate:redo": "node-pg-migrate redo",
    "lint": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\""
  },
  "dependencies": {
    "@fastify/cors": "^10.0.1",
    "@fastify/helmet": "^12.0.1",
    "@fastify/jwt": "^9.0.1",
    "@fastify/rate-limit": "^10.1.1",
    "@fastify/swagger": "^9.3.0",
    "@fastify/swagger-ui": "^5.0.1",
    "@opentelemetry/auto-instrumentations-node": "^0.64.6",
    "@opentelemetry/exporter-trace-otlp-http": "^0.205.0",
    "@opentelemetry/resources": "^2.1.0",
    "@opentelemetry/sdk-node": "^0.205.0",
    "@opentelemetry/semantic-conventions": "^1.37.0",
    "@types/bcrypt": "^6.0.0",
    "bcrypt": "^6.0.0",
    "dotenv": "^16.4.5",
    "fastify": "^5.2.0",
    "node-pg-migrate": "^8.0.3",
    "nodemailer": "^7.0.6",
    "pg": "^8.13.1",
    "pino": "^9.5.0",
    "shovel-shared-types": "file:../shared-types",
    "uuid": "^9.0.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@opentelemetry/sdk-trace-node": "^2.1.0",
    "@types/node": "^22.13.5",
    "@types/nodemailer": "^7.0.2",
    "@types/pg": "^8.11.10",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.4.2",
    "supertest": "^7.1.4",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3",
    "vitest": "^3.2.4"
  }
}
